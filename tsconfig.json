{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-native"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
